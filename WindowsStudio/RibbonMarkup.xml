<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://schemas.microsoft.com/windows/2009/Ribbon">
	<Application.Commands>
		<Command Name="cmdEdit" LabelTitle="Edit"/>
		<Command Name="cmdPlayback" LabelTitle="Playback" />
		<Command Name="cmdControls" LabelTitle="Controls" />
		<Command Name="cmdSelect" LabelTitle="Select" />
		<Command Name="cmdMove" LabelTitle="Move" />
		<Command Name="cmdScale" LabelTitle="Scale" />
		<Command Name="cmdRotate" LabelTitle="Rotate" />
		<Command Name="cmdPlay" LabelTitle="Play" />
		<Command Name="cmdStop" LabelTitle="Stop" />
	</Application.Commands>
	
	<Application.Views>
		<Ribbon>
			<Ribbon.Tabs>
				<Tab CommandName="cmdEdit">
					<Group CommandName="cmdControls" SizeDefinition="FourButtons">
						<ToggleButton CommandName="cmdSelect" />
						<ToggleButton CommandName="cmdMove" />
						<ToggleButton CommandName="cmdScale" />
						<ToggleButton CommandName="cmdRotate" />
					</Group>
					<Group CommandName="cmdPlayback" SizeDefinition="TwoButtons">
						<Button CommandName="cmdPlay" />
						<Button CommandName="cmdStop" />
					</Group>
				</Tab>
			</Ribbon.Tabs>
		</Ribbon>
	</Application.Views>
</Application>