			<Command.LargeImages>
				<Image Id="251" MinDPI="96">
					<Image.Source>res/sizeAndColor_96.bmp</Image.Source>
				</Image>
				<Image Id="252" MinDPI="120">
					<Image.Source>res/sizeAndColor_120.bmp</Image.Source>
